@model Gurukul.Infrastructure.Models.Magazine;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<h1>Add Magazine Details</h1>
<p>
    <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left"></i> Back To List</a>
</p>
<form method="post" action="create" class="mt-5" enctype="multipart/form-data">
    <div>
        <div>
            <div class="row">
                <div class="col-6">
                    <label for="" class="form-label">Title:</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
                <div class="col-6">
                    <label for="" class="form-label">Description:</label>
                    <textarea class="form-control" id="Description" name="Description" placeholder="Description" required></textarea>
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col-6">
                    <label asp-for="MagazineType">Magazine Type:</label>
                    <select class="form-select" asp-for="MagazineType">
                        <option value="">Choose...</option>
                        <option value="Spiritual">Spiritual</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.MagazineType, "", new { @class = "text-danger" })
                </div>
                <div class="col-6">
                    <label for="" class="form-label">Author:</label>
                    <input type="text" class="form-control" asp-for="Author" placeholder="Author" >
                    @Html.ValidationMessageFor(x => x.Author, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-6 ">
                    <label for="" class="form-label">Publisher Name:</label>
                    <input type="text" class="form-control" asp-for="PublisherName" placeholder="Publisher Name" >
                    @Html.ValidationMessageFor(x => x.PublisherName, "", new { @class = "text-danger" })
                </div>

                <div class="col-6 ">
                    <label for="" class="form-label">Publication Date:</label>
                    <input type="date" class="form-control" asp-for="PublicationDate">
                    @Html.ValidationMessageFor(x => x.PublicationDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="m-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>

</form>





