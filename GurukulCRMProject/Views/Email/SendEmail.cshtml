@model Gurukul.Infrastructure.Models.Mail
<h1>Newsletter</h1>
<form method="post" action="SendEmail">
    @{
        int i = 1;
    }

    <div class="row">
        <div class="col-6 p-4">
            <h5>List of Users</h5>
            @foreach (var con in Model.contacts)
            {
                <div>
                    <span>@i).</span>
                    <input type="checkbox" class="checkbox" name="selectedUsers" value="@con.Email" id="@con.Id" /> @con.FirstName @con.LastName
                </div>
                i = i + 1;
            }
        </div>

        <div class="col-6 p-4">
            <h5>Compose Email</h5>

            <label for="subject">Subject:</label>
            <input type="text" class="form-control" asp-for="Title" required />
            <label for="body">Body:</label>
            <textarea class="form-control" asp-for="Body" required></textarea>
            <input type="submit" value="Send Email" class="btn btn-primary m-2" id="btn" />
        </div>
    </div>
</form>